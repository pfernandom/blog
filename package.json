{
  "name": "pedromarquez.dev",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev -p 8000",
    "build": "npm run resize && next build",
    "deploy": "npm run resize && next build && next export",
    "start": "next dev",
    "lint": "next lint",
    "resize": "npx ts-node ./scripts/resize.ts",
    "static": "sh ./scripts/static.sh",
    "resize-image": "npx ts-node ./scripts/resize-image.ts",
    "sitemap": "ts-node ./scripts/sitemap.ts",
    "sw-gen": "ts-node ./scripts/sw-gen.ts",
    "puremd": "npx ts-node ./scripts/mdxToMd.ts",
    "prepare": "husky install",
    "analyze": "ANALYZE=true npm run build",
    "analyze-dep": "npx depcruise --output-type json --reaches 'react-color' --focus '^src' ./src > deps.json ",
    "devto": "find ./src -type f -name \"hero.*\" -print0 | xargs -0 -I {} npx ts-node ./scripts/resize-image.ts {} --name devto.png --ext png --scaleX 1 --scaleY 0.42 &",
    "sw": "npm run sw-gen && npx esbuild src/sw/sw.ts --bundle --outfile=public/sw.js --target=chrome58,firefox57,safari11,edge16",
    "cypress": "cypress open",
    "cypress:run": "cypress run",
    "e2e": "start-server-and-test start http://localhost:3000 cypress",
    "e2e:run": "start-server-and-test start http://localhost:3000 cypress:run",
    "test": "npx jest",
    "test:update": "npx jest -u",
    "emulator": "firebase emulators:start --export-on-exit=./test_data",
    "new-post": "ts-node ./scripts/new-post.ts",
    "publish-post": "ts-node ./scripts/publish-post.ts"
  },
