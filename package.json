    "@types/react-dom": "18.0.6",
    "@types/react-helmet": "^6.1.5",
    "@types/react-syntax-highlighter": "^15.5.5",
    "@types/refractor": "^3.0.2",
    "@types/sharp": "^0.30.4",
    "@types/typography": "^0.16.4",
