{
  "name": "pedromarquez.dev",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev -p 8000",
    "build": "npm run resize  && next build",
    "deploy": "npm run resize  && next build && next export",
    "start": "next start",
    "lint": "next lint",
    "resize": "npx ts-node --project ./tsconfig-scripts.json ./scripts/resize.ts ",
    "static": "sh ./scripts/static.sh",
    "resize-image": "npx ts-node ./scripts/resize-image.ts",
    "sitemap": "ts-node  --project ./tsconfig-scripts.json  ./scripts/sitemap.ts",
    "sw-gen": "ts-node  --project ./tsconfig-scripts.json  ./scripts/sw-gen.ts",
    "puremd": "npx ts-node  --project ./tsconfig-scripts.json ./scripts/mdxToMd.ts",
    "prepare": "husky install",
    "analyze": "ANALYZE=true npm run build",
    "analyze-dep": "npx depcruise --output-type json --reaches 'react-color' --focus '^src' ./src > deps.json ",
    "devto": "find ./src -type f -name \"hero.*\" -print0 | xargs -0 -I {} npx ts-node --project tsconfig-scripts.json ./scripts/resize-image.ts {} --name devto.png --ext png --scaleX 1 --scaleY 0.42",
    "sw": "npm run sw-gen && npx esbuild src/sw/sw.ts --bundle --outfile=public/sw.js --target=chrome58,firefox57,safari11,edge16"
  },
  "dependencies": {
    "@mdx-js/loader": "^2.1.2",
    "@mdx-js/react": "^2.1.2",
    "@next/bundle-analyzer": "^12.2.5",
    "@next/mdx": "^12.2.3",
    "@types/react": "^18.0.21",
    "cross-env": "^7.0.3",
    "date-fns": "^2.29.1",
    "feed": "^4.2.2",
    "gray-matter": "^4.0.3",
    "hast-util-to-string": "^2.0.0",
    "http-server": "^14.1.1",
    "install": "^0.13.0",
    "lowlight": "^2.7.0",
    "mdx-to-md": "^0.3.1",
    "next": "12.2.4",
    "next-seo": "^5.5.0",
    "npm": "^8.19.2",
    "prismjs": "^1.16.0",
    "react": "^18.2.0",
    "react-color": "^2.19.3",
    "react-dom": "18.2.0",
    "react-helmet": "^6.1.0",
    "react-helmet-async": "^1.3.0",
    "react-refractor": "^2.1.7",
    "react-social-icons": "https://github.com/pfernandom/react-social-icons/releases/download/react-social-icons-lite/react-social-icons-5.14.1.tgz",
    "react-syntax-highlighter": "^15.5.0",
    "remark": "^14.0.2",
    "remark-frontmatter": "^4.0.1",
    "remark-html": "^15.0.1",
    "remark-mdx-frontmatter": "^2.0.3",
    "sass": "^1.54.9",
    "socket.io": "^4.5.2",
    "socket.io-client": "^4.5.2",
    "typeface-merriweather": "0.0.72",
