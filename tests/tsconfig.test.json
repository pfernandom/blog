{
  "transpileOnly": true,
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true
  },
  "paths": {
    "app/*": ["../app/**/*"],
    "components/*": ["../app/_components/*"],
    "helpers/*": ["../app/helpers/*"],
    "models/*": ["../app/models/*"],
    "@content-manager/*": ["../app/content-manager/*"]
  },
  "include": ["../app/**/*.ts", "tests/**/*.ts"],
  "exclude": ["node_modules", "cypress", "app/sw/*.ts", "app/types"]
}
