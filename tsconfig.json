{
  "ts-node": {
    "compilerOptions": {
      "target": "esnext",
      "module": "commonjs",
      "moduleResolution": "node",
      "esModuleInterop": true
    },
    "transpileOnly": true
  },
  "compilerOptions": {
    "target": "es6",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": "./src",
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "paths": {
    "app/*": ["./src/app/*"],
    "blog-types": ["./types.ts"]
  },
  "include": [
    "next-env.d.ts",
    "src/app/**/*.tsx",
    "src/app/**/*.ts",
    "tests/**/*.ts",
    "tests/**/*.mts",
    "scripts/gen-imports.mts",
    "scripts/*.ts",
    "scripts/resize.mts",
    "scripts/mdxToMd.mts",
    ".next/types/**/*.ts" ],
  "exclude": [
    "node_modules",
    "cypress",
    "src/app/sw/*.ts",
    "src/app/types",
    "cypress.config.ts"
  ],
  "rules": {
    "no-console": [true, "warning"]
  }
}
